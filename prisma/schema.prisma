// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  userId    Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  name      String?
  tasks     Task[]
}

model Task {
  taskId      Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  title       String
  description String?
  status      String    @default("To Do")
  duration    Int       @default(0)
  timeSpent   Int       @default(0)
  done        Boolean   @default(false)
  authorId    Int?
  author      User?     @relation(fields: [authorId], references: [userId], onDelete: Cascade, onUpdate: NoAction)
  priorityId  Int?
  priority    Priority? @relation(fields: [priorityId], references: [priorityId], onDelete: NoAction, onUpdate: NoAction)
}

model Priority {
  priorityId  Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String   @unique
  description String?
  tasks       Task[]
}

model Status {
  statusId    Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String   @unique
  description String?
}
